{
    "name": "jobsity/slim-challenge",
    "description": "PHP Challenge - Jobsity",
    "keywords": ["Slim", "microframework", "rest", "eloquent", "phpunit", "api", "php"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Moises Garcia",
            "email": "devchallengermoises@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "slim/http": "^1.3",
        "swiftmailer/swiftmailer": "^6.0",
        "php-di/php-di": "^6.3",
        "symfony/dotenv": "^5.2",
        "php-amqplib/php-amqplib": "^3.3",
        "ext-json": "*",
        "firebase/php-jwt": "^5.0",
        "monolog/monolog": "^3.2",
        "awurth/slim-validation": "^3.4",
        "tuupola/slim-jwt-auth": "^3.6",
        "robmorgan/phinx": "^0.13.2",
        "symfony/yaml": "^6.1",
        "illuminate/database": "^9.42",
        "guzzlehttp/guzzle": "^7.5",
        "php-di/slim-bridge": "^3.2",
        "fakerphp/faker": "^1.19"
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "setup": "sh ./setup-env.sh",
        "docker-slim": "docker exec -it jobsity-slim-1 ash"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
